<div class="container">
    <div class="row">
        {{#each allArticles}}
        <div class="col-sm-6">
            <div class="card">
                <img src="{{this.image}}" class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.summary}}</p>
                    <a href="/{{this.id}}" class="btn btn-warning">Add A Comment</a>
                </div>
            </div>
        </div>    
        {{/each}}
        </br>
    </div>
</div>